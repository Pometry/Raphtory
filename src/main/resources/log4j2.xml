<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.hibernate.SQL" level="${bundle:com.raphtory.logger:default}">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.hibernate.type.descriptor.sql" level="${bundle:com.raphtory.logger:default}">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.hibernate.type.descriptor.sql" level="${bundle:com.raphtory.logger:default}">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.scurrilous.circe.checksum.Crc32cIntChecksum" level="${bundle:com.raphtory.logger:mode}">
        </Logger>
        <Logger name="io.netty" level="${bundle:com.raphtory.logger:mode}">
        </Logger>
        <Logger name="org.apache" level="${bundle:com.raphtory.logger:mode}">
        </Logger>
        <Logger name="com.raphtory.deploy" level="${bundle:com.raphtory.deploy:logLevel}">
        </Logger>
        <Logger name="com.raphtory.develop" level="${bundle:com.raphtory.logger:default}">
        </Logger>
        <Logger name="com.raphtory.core" level="${bundle:com.raphtory.logger:default}">
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>